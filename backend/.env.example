# Backend local development environment
# Copy to backend/.env

# Database (Docker PostgreSQL)
DATABASE_URL=postgresql+asyncpg://facelogix:devpassword@localhost:5432/facelogix

# Redis (Docker Redis)
REDIS_URL=redis://localhost:6379/0

# Face service (running locally)
FACE_SERVICE_URL=http://localhost:8001

# Security
JWT_SECRET_KEY=dev-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
DEVICE_TOKEN_SECRET=dev-device-secret-key

# App settings
DEBUG=true
LOG_LEVEL=DEBUG
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
