# =============================================================================
# FaceLogix Environment Variables Template
# Copy this file to .env and update with your values
# =============================================================================
# IMPORTANT: Never commit the actual .env file to version control!
# Generate secrets using: ./scripts/generate_secrets.sh
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL credentials
DB_USER=facelogix
DB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
DB_NAME=facelogix

# Database connection pool settings (optional, defaults shown)
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=10

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis password (required in production)
REDIS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Redis connection settings (optional)
# REDIS_MAX_CONNECTIONS=50
# REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# Security & Authentication
# =============================================================================

# JWT secret key for access tokens (minimum 32 characters)
# Generate with: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_KEY_AT_LEAST_32_CHARS

# Device token secret for device authentication
# Generate with: openssl rand -base64 48
DEVICE_TOKEN_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_KEY

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Face Recognition Settings
# =============================================================================

# Similarity threshold for face matching (0.0 - 1.0)
# Higher = stricter matching, lower = more lenient
FACE_RECOGNITION_THRESHOLD=0.75

# Detection threshold for finding faces (0.0 - 1.0)
FACE_DETECTION_THRESHOLD=0.5

# Maximum number of faces to detect per image
MAX_FACES_PER_IMAGE=10

# =============================================================================
# Domain & SSL Configuration
# =============================================================================

# Your production domain (used for CORS and SSL)
DOMAIN=facelogix.example.com

# SSL certificate paths (relative to docker/nginx/ssl/)
# SSL_CERT=fullchain.pem
# SSL_KEY=privkey.pem

# =============================================================================
# Email Configuration (Optional)
# =============================================================================

# SMTP server settings for sending emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
SMTP_TLS=true

# Email sender settings
# FROM_EMAIL=noreply@facelogix.example.com
# FROM_NAME=FaceLogix

# =============================================================================
# Monitoring & Observability (Optional)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable structured JSON logging
# JSON_LOGS=true

# =============================================================================
# Resource Limits (Optional - for Docker deployments)
# =============================================================================

# Backend service
# BACKEND_REPLICAS=2
# BACKEND_CPU_LIMIT=1
# BACKEND_MEMORY_LIMIT=1G

# Face service
# FACE_SERVICE_REPLICAS=2
# FACE_SERVICE_CPU_LIMIT=2
# FACE_SERVICE_MEMORY_LIMIT=4G

# =============================================================================
# Development/Testing (Only for non-production)
# =============================================================================

# Enable debug mode (NEVER enable in production!)
# DEBUG=false

# CORS origins for development
# CORS_ORIGINS=["http://localhost:3000"]
